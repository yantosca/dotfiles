# Defaults for all hosts
Host *
  ServerAliveInterval 240                 # Prevents session timeouts
  ServerAliveCountMax 6                   # Prevents session timeouts
  ForwardX11Trusted   yes                 # X11 forwarding (-Y)
  ForwardX11          yes                 # X11 forwarding (-X)
  ForwardAgent        yes                 # SSH key forwarding (-A)
{%@@ if profile == "calculon" @@%}
  # These settings are needed for MacOS
  XAuthLocation       /opt/X11/bin/xauth  # Need to specify xauth path
  UseKeychain         yes                 # Save SSH keys for later use
  AddKeysToAgent      yes                 # Save SSH keys for later use
{%@@ elif profile == "hypnotoad" @@%}
  XAuthLocation       /bin/xauth
{%@@ elif profile == "zoidberg" @@%}
  XAuthLocation       /bin/xauth
{%@@ endif @@%}

# Round-robin login node
Host rclogin
  HostName login.rc.fas.harvard.edu
  User ryantosca

# Direct to holylogin01 login node
Host holylogin01
  Hostname holylogin01.rc.fas.harvard.edu
  User ryantosca

# Direct to holylogin02 login node
Host holylogin02
  Hostname holylogin02.rc.fas.harvard.edu
  User ryantosca

# Direct to holylogin03 login node
Host holylogin03
  Hostname holylogin03.rc.fas.harvard.edu
  User ryantosca

# Holyjacob01 node info
Host holyjacob01
  HostName holyjacob01.rc.fas.harvard.edu
  User ryantosca

# Log into holyjacob via the round-robin
Host holyjacob01_rclogin
  HostName holyjacob01
  ProxyJump rclogin
  User ryantosca

# Log into holyjacob01 thru holylogin01
Host holyjacob01_holylogin01
  Hostname holyjacob01
  ProxyJump holylogin01
  User ryantosca

# Log into holyjacob01 thru holylogin02
Host holyjacob01_holylogin02
  Hostname holyjacob01
  ProxyJump holylogin02
  User ryantosca

# Log into holyjacob01 thru holylogin03
Host holyjacob01_holylogin03
  Hostname holyjacob01
  ProxyJump holylogin03
  User ryantosca
